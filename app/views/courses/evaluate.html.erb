<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">课程评估</h3>
        </div>
        <%= form_tag(controller:"courses",action:"analysis",method: "post") do %>
        <div class="panel-body" style="min-height: 10px">
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <td>
              当前评估课程：<%= @course.name %>
            </td>
            <td>
              主讲老师：<%= @course.teacher.name %>
            </td>
            <td>
              所属院系：<%= @course.teacher.department %>
            </td>
          </tr>
          </thead>
        </table>
        </div>
         
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>序号</th>
              <th>评估内容</th>
              <th>评分</th>
            </tr>
            <tr>
              <td>
                1
              </td>
              <td>
                治学严整、言传身教
              </td>
              <td>
                <%= text_field_tag(:grade1) %>
              </td>
            </tr>
            <tr>
              <td>
                2
              </td>
              <td>
                备课充分，讲课认真
              </td>
              <td>
                <%= text_field_tag(:grade2) %>
              </td>
            </tr>
            <tr>
              <td>
                3
              </td>
              <td>
                仪装端庄，精神饱满 
              </td>
              <td>
                <%= text_field_tag(:grade3) %>
              </td>
            </tr>
            <tr>
              <td>
                4
              </td>
              <td>
                虚心听取意见，积极改进教学 
              </td>
              <td>
                <%= text_field_tag(:grade4) %>
              </td>
            </tr>
            <tr>
              <td>
                5
              </td>
              <td>
                无调课、停课、替讲现象 
              </td>
              <td>
                <%= text_field_tag(:grade5) %>
              </td>
            </tr>
            </thead>
          </table>
          <%= submit_tag ("提交")%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>